{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@app/*": ["app/*"],
      "@config/*": ["app/_config/*"],
      "@environment/*": ["environments/*"],
      "@shared/*": ["app/_shared/*"],
      "@helpers/*": ["helpers/*"],
      "@tests/*": ["tests/*"]
    },
  },
  "include": [
    "src"
, "src/components/checkbox-with-label/CheckboxWithLabel.stores.tsx", "src/components/checkbox-with-label/CheckboxWithLabel.tsx"  ]
}